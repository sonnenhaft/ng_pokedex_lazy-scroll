.pokedex {
    text-align: center;
    margin: auto;

    h1 {
        text-align: left;
        padding: 54px 10px;
        margin 0
    }

    .load-more {
        background: #438BDF;
        border: none;
        font-weight: bold;
        padding: 10px 30px;
        font-size 16px;
        border-radius: 3px;
        cursor: pointer;
        margin-bottom 60px
        &:hover {
            background: #4e9cff;
        }
    }
    .float-hook {
        float left;
    }
    .clear-float-hook {
        clear both;
    }
    width: 660px;
    padding: 0 10px;
    background: white;
    @media only screen and (min-width: 920px) {
        & {
            padding: 0 60px;
            width: 880px;
        }
    }
    @media only screen and (max-width: 680px) {
        & {
            width: 440px;
        }
    }
    @media only screen and (max-width: 500px) {
        & {
            width: 220px;
        }
    }
}

